{
	"name": "Github Minus 1",
	"manifest_version": 2,
	"version": "1.0",
	"icons": { "16": "icon16.png",
	           "48": "icon48.png",
	          "128": "icon128.png" },
	"description": "Removes all +1 and :+1 comments from Github issues and pull requests",
	"content_scripts": [
		{
			"matches": ["https://github.com/*/*/issues/*", "https://github.com/*/*/pull/*"],
			"js": ["script.js"],
			"run_at": "document_end"
		}
	]
}